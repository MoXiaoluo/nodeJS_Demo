<p id="content">{{content}}</p>
<a href='javascript:void(0)'onclick='down()'>{{button}}</a>

<script src='build/pdfmake.min.js'></script> 
<script src='build/vfs_fonts.js'></script>
<script>
    function down() {
        var dd = {
            content: [
                { text: 'This is a header', style: 'header' },
                'No styling here, this is a standard paragraph',
                { text: document.getElementById('content').textContent, style: 'anotherStyle' }
            ],

            styles: {
                header: {
                    fontSize: 22,
                    bold: true
                },
                anotherStyle: {
                    italic: true,
                    alignment: 'right'
                }
            }
        };
        pdfMake.createPdf(dd).print();
    }
    </script>
</script>